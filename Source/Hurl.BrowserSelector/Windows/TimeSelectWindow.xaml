<wpfui:FluentWindow
    x:Class="Hurl.BrowserSelector.Windows.TimeSelectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hurl.BrowserSelector.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Timed default browser - Hurl"
    Width="360"
    Height="280"
    MinHeight="280"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    SizeToContent="Height"
    Topmost="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <wpfui:TitleBar
            Title="Timed default browser - Hurl"
            ShowMaximize="False"
            ShowMinimize="False" />

        <StackPanel Grid.Row="1" Margin="16,0">
            <wpfui:Card Margin="0,0,0,8">
                <Grid>
                    <TextBlock VerticalAlignment="Center" Text="Time (minutes)" />
                    <wpfui:NumberBox
                        x:Name="TimeBox"
                        MinWidth="120"
                        HorizontalAlignment="Right"
                        Maximum="300"
                        Minimum="0"
                        Value="10" />
                </Grid>
            </wpfui:Card>
            <wpfui:Card>
                <Grid>
                    <TextBlock VerticalAlignment="Center" Text="Browser" />
                    <ComboBox
                        x:Name="BrowserBox"
                        MinWidth="120"
                        HorizontalAlignment="Right"
                        ItemsSource="{Binding}" />
                </Grid>
            </wpfui:Card>
        </StackPanel>

        <Border Grid.Row="2" Style="{DynamicResource BottomBarStyle}">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <wpfui:Button
                    MinWidth="120"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    Appearance="Primary"
                    Click="SetBtn_Click"
                    Content="Set" />
                <wpfui:Button
                    MinWidth="120"
                    Click="CancelBtn_Click"
                    Content="Cancel" />
            </StackPanel>
        </Border>
    </Grid>
</wpfui:FluentWindow>
