<wpfui:FluentWindow
    x:Class="Hurl.BrowserSelector.Windows.TimeSelectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hurl.BrowserSelector.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Timed Default Browser"
    Width="360"
    Height="280"
    MinHeight="280"
    ExtendsContentIntoTitleBar="True"
    Topmost="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            Title="Timed Default Browser"
            ShowMaximize="False"
            ShowMinimize="False" />

        <StackPanel Grid.Row="1" Margin="16,0">
            <wpfui:CardControl Header="Time (minutes)" Icon="Clock24">
                <wpfui:NumberBox
                    x:Name="TimeBox"
                    Maximum="300"
                    Minimum="0"
                    Value="10" />
            </wpfui:CardControl>

            <wpfui:CardControl
                Margin="0,8,0,0"
                Header="Browser"
                Icon="Globe24">
                <ComboBox x:Name="BrowserBox" ItemsSource="{Binding}" />
            </wpfui:CardControl>

        </StackPanel>

        <Border Grid.Row="2" Style="{DynamicResource BottomBarStyle}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <wpfui:Button Click="CancelBtn_Click" Content="Cancel" />
                <wpfui:Button
                    Grid.Column="2"
                    Appearance="Primary"
                    Click="SetBtn_Click"
                    Content="Set" />
            </Grid>
        </Border>
    </Grid>
</wpfui:FluentWindow>
