<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Hurl.Selector.Pages.TimedDefaultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Hurl.Selector.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock
                Padding="12,8"
                FontSize="16"
                Text="Timed Default Browser" />
        </Grid>

        <StackPanel
            Grid.Row="1"
            Margin="8"
            Spacing="8">
            <StackPanel
                Padding="8"
                Background="{StaticResource AccentAcrylicBackgroundFillColorBaseBrush}"
                BorderBrush="{StaticResource ControlElevationBorderBrush}"
                BorderThickness="1.5"
                CornerRadius="4"
                Orientation="Horizontal"
                Spacing="12">
                <ComboBox
                    Width="175"
                    Header="Type"
                    PlaceholderText="Condition type">
                    <x:String>For a period of time</x:String>
                    <x:String>Till a specific time</x:String>
                    <x:String>Until I turn it off</x:String>
                </ComboBox>

                <!--<ComboBox
                    Width="160"
                    Header="Type of condition"
                    PlaceholderText="Time period">
                    <x:String>5 mins</x:String>
                    <x:String>10 mins</x:String>
                    <x:String>15 mins</x:String>
                    <x:String>20 mins</x:String>
                    <x:String>30 mins</x:String>
                    <x:String>45 mins</x:String>
                    <x:String>1 hour</x:String>
                </ComboBox>-->

                <TimePicker>
                    <TimePicker.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="0,0,0,4"
                                Padding="0"
                                Text="Till Time . . ." />
                        </DataTemplate>
                    </TimePicker.HeaderTemplate>
                </TimePicker>
            </StackPanel>

            <StackPanel
                Padding="8"
                Background="{StaticResource AccentAcrylicBackgroundFillColorBaseBrush}"
                BorderBrush="{StaticResource ControlElevationBorderBrush}"
                BorderThickness="1.5"
                CornerRadius="4"
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock VerticalAlignment="Center">Choose the browser</TextBlock>
                <ComboBox Width="175" PlaceholderText="Browser">
                    <x:String>For a period of time</x:String>
                    <x:String>Till a specific time</x:String>
                    <x:String>Until I turn it off</x:String>
                </ComboBox>
            </StackPanel>

            <!--<StackPanel Orientation="Horizontal" Spacing="8">
                <Button IsEnabled="False">Clear</Button>
                <Button Style="{StaticResource AccentButtonStyle}">Set</Button>
            </StackPanel>-->

            <StackPanel
                Padding="8"
                Background="{StaticResource AccentAcrylicBackgroundFillColorBaseBrush}"
                BorderBrush="{StaticResource ControlElevationBorderBrush}"
                BorderThickness="1.5"
                CornerRadius="4"
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock VerticalAlignment="Center">An existing timed default browser is already running</TextBlock>
                <Button IsEnabled="False">Clear</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
