<Window x:Class="Hurl.Views.BrowserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hurl.Views" mc:Ignorable="d" 
        Width="280" Height="180" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Browser Form">
    <StackPanel Margin="5,5,5,5">
        <Label Content="Name" Margin="0,5,0,0"/>
        <TextBox Text="{Binding BrowserName}"/>
        <Label Content="Path" Margin="0,5,0,0"/>
        <TextBox x:Name="ExePathBox" Text="{Binding BrowserPath}" MouseDoubleClick="TextBox_MouseDoubleClick"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Width="70" Click="CancelClick">Cancel</Button>
            <Button Width="70" Click="RemoveBtn" Margin="23,0,0,0">Remove</Button>
            <Button Width="70" Margin="22,0,0,0" Click="SaveButton">Save</Button>
        </StackPanel>
    </StackPanel>
</Window>
